@page "/linear-gauge/annotation"

@using Syncfusion.Blazor.LinearGauge

@inherits SampleBaseComponent;

<div class="control-section">
    <SfLinearGauge Orientation="Orientation.Horizontal" RangePalettes="@PaletteColors">
        <LinearGaugeAxes>
            <LinearGaugeAxis Maximum="90">
                <LinearGaugeLine Width="0"/>
                <LinearGaugeAxisLabelStyle>
                    <LinearGaugeAxisLabelFont Size="0"/>
                </LinearGaugeAxisLabelStyle>
                <LinearGaugeMajorTicks Height="0"/>
                <LinearGaugeMinorTicks Height="0"/>
                <LinearGaugeRanges>
                    <LinearGaugeRange Start="0.1" End="30" StartWidth="50" EndWidth="50"/>
                    <LinearGaugeRange Start="30" End="60" StartWidth="50" EndWidth="50"/>
                    <LinearGaugeRange Start="60" End="90" StartWidth="50" EndWidth="50"/>
                </LinearGaugeRanges>                
                <LinearGaugePointers>
                    <LinearGaugePointer Value="35" Height="15" Width="15" Placement="Placement.Near" Offset="-50" MarkerType="MarkerType.Triangle" Color="#757575"/>
                </LinearGaugePointers>
            </LinearGaugeAxis>
        </LinearGaugeAxes>
        <LinearGaugeAnnotations>
            <LinearGaugeAnnotation HorizontalAlignment="Placement.Center" X="35" Y="50" ZIndex="1">
                <ContentTemplate>
                    <div class="titleText"><p style='font-size:18px;'>CPU Utilization</p></div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
            <LinearGaugeAnnotation AxisIndex="0" AxisValue="15" Y="-25" ZIndex="1">
                <ContentTemplate>
                    <div class="imagePosition"><img class="annotationImage" src="styles/images/lineargauge/Low.png"/></div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
            <LinearGaugeAnnotation AxisIndex="0" AxisValue="45" Y="-25" ZIndex="1">
                <ContentTemplate>
                    <div class="imagePosition">
                        <img class="annotationImage" src="styles/images/lineargauge/Moderate.png"/>
                    </div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
            <LinearGaugeAnnotation AxisIndex="0" AxisValue="75" Y="-25" ZIndex="1">
                <ContentTemplate>
                    <div class="imagePosition">
                        <img class="annotationImage" src="styles/images/lineargauge/Low.png"/>
                    </div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
            <LinearGaugeAnnotation AxisIndex="0" AxisValue="15" Y="20" ZIndex="1">
                <ContentTemplate>
                    <div><p class="textFont" style="color:#248622;">Low</p></div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
            <LinearGaugeAnnotation AxisIndex="0" AxisValue="45" Y="20" ZIndex="1">
                <ContentTemplate>
                    <div><p class="textFont" style="color:#ba9e2a;">Moderate</p></div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
            <LinearGaugeAnnotation AxisIndex="0" AxisValue="75" Y="20" ZIndex="1">
                <ContentTemplate>
                    <div><p class="textFont" style="color:#b42f2f;">High</p></div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
        </LinearGaugeAnnotations>
    </SfLinearGauge>
</div>
<style>
    .annotationImage {
        height:25px;
        width:25px;
    }
    .imagePosition {
        margin-top:-15px
    }
    .textFont{
        font-size:15px;
    }
    .titleText{
        width:200px;
        margin-left:-150px;
        margin-top:-10px;
    }
</style>
@code {
    private string[] PaletteColors = new string[] { "#30b32d", "#ffdd00", "#f03e3e" };
}