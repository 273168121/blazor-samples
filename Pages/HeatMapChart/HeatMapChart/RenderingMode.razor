@page "/HeatMapChart/RenderingMode"

@using Syncfusion.EJ2.Blazor.HeatMap
@using Syncfusion.EJ2.Blazor;

@*Hidden:Lines*@
@using ej2_blazor_samples
@using ej2_blazor_heatmapdata
@{
    SampleBrowser.CurrentSampleName = "Rendering Mode";
    SampleBrowser.CurrentControlName = "HeatMapChart";
    SampleBrowser.CurrentControlCategory = "HeatMapChart";
    SampleBrowser.CurrentControl = SampleBrowser.Config.HeatMapChart;
    SampleBrowser.ActionDescription = new string[] {
        @"<p>
        This sample visualizes the net migration rate for the northern European countries over the years. The data label is disabled in this sample, the tooltip displays the data point values. In property panel, the options are available to change the rendering mode between Canvas and SVG means of radio button.
     </p>"
    };
    SampleBrowser.Description = new string[] {
        @"<p>
         In this example, you can see how to change the rendering mode between <code>Canvas</code> and <code>SVG</code> types in Heatmap. You can change the rendering mode using the <code>renderingMode</code> property.

         Tooltip is enabled in this example, to see the tooltip in action, hover a point or tap on a point in touch enabled devices.
    </p>"
    };
}
@*End:Hidden*@
<div class="row">
    <div>
        <Ejsheatmap DataSource="@heatmapData">
            <HeatMapTitle Text="Net Migration Rate of Northern Europe From 1965 to 2015" TextStyle="@TextStyle"></HeatMapTitle>
            <HeatMapXAxis Labels="@xLabels" LabelRotation="-90" LabelIntersectAction="@Syncfusion.EJ2.Blazor.HeatMap.LabelIntersectAction.None"></HeatMapXAxis>
            <HeatMapYAxis Labels="@yLabels"></HeatMapYAxis>
            <HeatMapPaletteSettings>
                <HeatMapPalettes>
                    <HeatMapPalette Color="#C06C84"></HeatMapPalette>
                    <HeatMapPalette Color="#355C7D"></HeatMapPalette>
                </HeatMapPalettes>
            </HeatMapPaletteSettings>
            <HeatMapCellSettings ShowLabel="false" Border="@Border" Format="{value} %"></HeatMapCellSettings>
            <HeatMapLegendSettings Position="@Syncfusion.EJ2.Blazor.HeatMap.LegendPosition.Bottom" Width="200px"></HeatMapLegendSettings>
        </Ejsheatmap>
    </div>
</div>
@code{

    private string[] xLabels = new string[] { "Channel Isl", "Denmark", "Estonia", "Finland", "Iceland", "Ireland", "Latvia", "Lithuania", "Norway", "Sweden", "UK" };

    private string[] yLabels =  new string[] { "1965-1970", "1970-1975", "1975-1980", "1980-1985", "1985-1990", "1990-1995", "1995-2000", "2000-2005", "2005-2010", "2010-2015" };

    public FontModel TextStyle = new FontModel() { Size = "15px", FontWeight = "500", FontStyle = "Normal" };

    public BorderModel Border = new BorderModel() { Width = 0 };

    public object heatmapData = HeatMapData.GetRendermodeData();
    }
