@page "/Card/header-card"
@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.Buttons

@inherits SampleBaseComponent;

<div class="control-section">
    <div class="row align-items-center">
        <div class="col-lg-4 col-md-4" style="height: 300px">
            <SfCard ID="HugeImage">
                <CardImage Image="../images/cards/nancy.png"/>
                <CardHeader Title="Harrisburg Keith" SubTitle="@CardSubTitle"/>
                <CardContent Content="Hi, I'm creative graphic design for print, new media based in Edenbridge"/>
                <CardFooter>
                    <CardFooterContent>
                        <SfButton CssClass="e-btn e-outline e-primary">FOLLOW US</SfButton>
                    </CardFooterContent>
                </CardFooter>
            </SfCard>
        </div>
        <div class="col-lg-4 col-md-4 second-container" style="height: 300px">
            <SfCard ID="SecondCard">
                <CardHeader Title="Harrisburg Keith" SubTitle="@CardSubTitle" ImageSrc="../images/cards/nancy.png" />
                <CardContent Content="Hi, I'm creative graphic design for print, new media based in Edenbridge" />
                <CardFooter>
                    <CardFooterContent>

                        <table>
                            <tr>
                                <td> <span class="e-icons column"></span></td>
                                <td> <span class="e-icons line"></span></td>
                                <td> <span class="e-icons area"></span></td>
                            </tr>
                        </table>                     
                    </CardFooterContent>
                </CardFooter>
            </SfCard>
            <SfCard ID="Card_Third">
                <CardHeader Title="Harrisburg Keith" SubTitle="@CardSubTitle" ImageSrc="../images/cards/nancy.png" />
                </SfCard>
        </div>
    </div>
</div>



<style>

   

    .e-card .e-card-header .e-card-header-caption .e-card-sub-title {
        padding-top: 0px;
    }

        .e-card .e-card-header .e-card-header-caption .e-card-header-title{
            font-weight: bold;
        }


        .e-card .e-card-content {
            padding-top: 0px;
        }
    #HugeImage{
        text-align: center
    }
    #HugeImage > .e-card-image{
        margin: auto; 
        width: 110px;
    }

    .second-container .e-card .e-card-header .e-card-header-image {
        height: 48px;
        width: 48px;
    }

    #Card_Third {
        margin-top: 8%;
    }
    .column:before{
        content: '\e7de'
    }
    .line:before{
        content: '\e7df'
    }
    .area:before {
        content: '\e7dd'
    }

    .row {
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table{
        width: 80%
    }
</style>


@code{
    string CardSubTitle = "@harrisburg_keith";
}