@page "/Schedule/HeaderRows"

@using Syncfusion.EJ2.Blazor.Schedule
@using ej2_blazor_samples
@inherits SampleBaseComponent;

<div class="col-lg-12 control-section">
    <div class="schedule-wrapper">
        <EjsSchedule TValue="ScheduleData.AppointmentData" Width="100%" Height="650px" SelectedDate="@(new DateTime(2020, 1, 6))">
            <ScheduleHeaderRows>
                <ScheduleHeaderRow Option="HeaderRowType.Month"></ScheduleHeaderRow>
                <ScheduleHeaderRow Option="HeaderRowType.Week"></ScheduleHeaderRow>
                <ScheduleHeaderRow Option="HeaderRowType.Date"></ScheduleHeaderRow>
            </ScheduleHeaderRows>
            <ScheduleViews>
                <ScheduleView Option="View.TimelineMonth" Interval="12"></ScheduleView>
            </ScheduleViews>
            <ScheduleEventSettings DataSource="@DataSource"></ScheduleEventSettings>
        </EjsSchedule>
    </div>
</div>

@code{
    public List<ScheduleData.AppointmentData> DataSource = new ScheduleData().GetHeaderRowData();
}
