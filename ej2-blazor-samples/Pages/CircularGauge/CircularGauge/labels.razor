@page "/CircularGauge/Labels"

@using Syncfusion.EJ2.RazorComponents.CircularGauge
@using Newtonsoft.Json;

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = "Ticks and Labels";
    SampleBrowser.CurrentControlName = "CircularGauge";
    SampleBrowser.CurrentControlCategory = "CircularGauge";
    SampleBrowser.CurrentControl = SampleBrowser.Config.CircularGauge;
    SampleBrowser.ActionDescription = new string[] {
        @" <p>
            This sample illustrates how to customize the ticks and labels of an axis. Position, offset, and height of the tick and label has been customized here.
        </p>"
    };
    SampleBrowser.Description = new string[] {
        @"<p>
            In this example, you can see how to render and configure the ticks and labels of an axis in the circular gauge. Labels are
            units that are used to display the values in the axis. You can customize <code>labels</code> with the properties
            like <code>angle</code>, <code>font</code>,
            <code>position</code>, etc. Ticks are used to mark some values on the axis. You can also customize the ticks using
            <code>majorTicks</code>,
            <code>minorTicks</code> properties.
        </p>
        <p>
            More information on the labels can be found in this
            <a target=""_blank"" href=""http://ej2.syncfusion.com/documentation"">documentation section</a>.
        </p>"
    };
}
@*End:Hidden*@

<div class="control-section">
    <EjsCircularGauge id="circular" >
        <CircularGaugeAxes>
            <CircularGaugeAxis StartAngle="210" EndAngle="150" Minimum="0" Maximum="170" Radius="75%"
                               Annotations="@annotations" LineStyle="@lineStyle" LabelStyle="@labelStyle" 
                               MajorTicks="@majorTicks" MinorTicks="@minorTicks" Pointers="@pointers">
            </CircularGaugeAxis>
        </CircularGaugeAxes>
    </EjsCircularGauge>
</div>

@functions {

public object annotations = new List<object> {
    new
    { 
        content = "<div id='content' style='color:#518C03;font-size:20px;font-family:Segoe UI;font-weight:semibold;'>145</div>",
        angle = 0,
        radius = "0%",
        zIndex = 1 
    }
};
public object lineStyle = new { width = 2, color = "#9E9E9E" };
public object labelStyle = new { position = "Outside", autoAngle = true, font = new { size = "10px" } };
public object majorTicks = new { position = "Inside", color = "#757575", width = 2, height = 10, interval = 20 };
public object minorTicks = new { position = "Inside", color = "#757575", width = 2, height = 5, interval = 10 };
public object pointers  = new List<object> {
    new
    {
        animation = new { enable = false, duration = "0" },
        type = "RangeBar",
        value = 145,
        radius = "60%",
        color = "#8BC34A",
        pointerWidth = 10,
        roundedCornerRadius = 10,
    }
};
}