@page "/MenuBar/DefaultFunctionalities"

@using Syncfusion.EJ2.RazorComponents.Navigations

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = SampleBrowser.Config.MenuBar[0].Name;
    SampleBrowser.CurrentControlName = "MenuBar";
    SampleBrowser.CurrentControlCategory = "Navigations";
    SampleBrowser.CurrentControl = SampleBrowser.Config.MenuBar;
}
@*End:Hidden*@

<div class="control-section">
    <div class="menu-control">
        <EjsMenu ID="menu" Items="@menuItems"></EjsMenu>
    </div>
</div>
<style>
    @@font-face {
        font-family: 'em-icons';
        src:
        url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    .em-icons { 
        font-family: 'em-icons';
    }

    .e-file::before {
        content: '\e700';
    }

    .e-edit::before {
        content: '\e701';
    }

    .e-tool::before {
        content: '\e7cf';
    }

    .e-cut::before {
        content: '\e704';
    }

    .e-copy::before {
        content: '\e705';
    }

    .e-paste::before {
        content: '\e706';
    }

    .e-open::before {
        content: '\e702';
    }

    .e-save::before {
        content: '\e703';
    }

    .menu-control {
        margin: 45px auto 0;
        text-align: center;
    }
</style>

@functions{
    List<object> menuItems = new List<object>{
            new
            {
                text = "File",
                iconCss = "em-icons e-file",
                items = new List<object>
                {
                    new { text= "Open", iconCss= "em-icons e-open" },
                    new { text= "Save", iconCss= "em-icons e-save" },
                    new { separator= true },
                    new { text= "Exit" }
                }
            },
            new
            {
                text = "Edit",
                iconCss = "em-icons e-edit",
                items = new List<object>
                {
                    new { text= "Cut", iconCss= "em-icons e-cut" },
                    new { text= "Copy", iconCss= "em-icons e-copy" },
                    new { text= "Paste", iconCss= "em-icons e-paste" }
                }
            },
            new
            {
                text = "View",
                items = new List<object>
                {
                    new {
                        text = "Toolbars",
                        items = new List<object>()
                        {
                            new { text= "Menu Bar" },
                            new { text= "Bookmarks Toolbar" },
                            new { text= "Customize" }
                        }
                    },
                    new {
                        text = "Zoom",
                        items = new List<object>()
                        {
                            new { text= "Zoom In" },
                            new { text= "Zoom Out" },
                            new { text= "Reset" },
                        }
                    },
                    new { text = "Full Screen" }
                }
            },
            new
            {
                text = "Tools",
                items = new List<object>()
                {
                    new { text= "Spelling & Grammar" },
                    new { text= "Customize" },
                    new { separator= true },
                    new { text= "Options" }
                }
            },
            new { text = "Help" }
            };
}